<footer class="srd-footer" role="contentinfo" aria-label="Футер сайта">
    <!-- Плавающие кнопки навигации -->
    <div class="floating-buttons" aria-label="Плавающие кнопки навигации">
        <button class="floating-btn up-btn" aria-label="Наверх" type="button">
            <img src="{{ asset('assets/icons/ArrowUp.svg') }}" alt="Вверх">
        </button>
        <button class="floating-btn chat-btn" aria-label="Открыть чат" type="button">
            <img src="{{ asset('assets/icons/Chat.svg') }}" alt="Чат">
        </button>
    </div>

    <div class="container">
        <div class="row">

            {# Колонка: Компания #}
            <div class="col-md-3 mb-3">
                <section class="footer-section" aria-labelledby="footer-company-title">
                    <h5 id="footer-company-title" class="d-none d-md-block">Компания</h5>
                    <button class="footer-toggle d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#footerCompany" aria-expanded="false" aria-controls="footerCompany">
                        Компания
                    </button>
                    <div class="collapse d-md-block" id="footerCompany">
                        <ul class="list-unstyled small">
                            <li><a href="{{ path('info-about') }}">О нас</a></li>
                            <li><a href="{{ path('info-contacts') }}">Контакты</a></li>
                        </ul>
                    </div>
                </section>
            </div>

            {# Колонка: Покупателям #}
            <div class="col-md-3 mb-3">
                <section class="footer-section" aria-labelledby="footer-buyers-title">
                    <h5 id="footer-buyers-title" class="d-none d-md-block">Покупателям</h5>
                    <button class="footer-toggle d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#footerBuyers" aria-expanded="false" aria-controls="footerBuyers">
                        Покупателям
                    </button>
                    <div class="collapse d-md-block" id="footerBuyers">
                        <ul class="list-unstyled small">
                            <li><a href="{{ path('info-delivery') }}">Доставка</a></li>
                            <li><a href="{{ path('info-warranty') }}">Гарантия</a></li>
                            <li><a href="{{ path('info-payment') }}">Оплата</a></li>
                        </ul>
                    </div>
                </section>
            </div>

            {# Колонка: Услуги #}
            <div class="col-md-3 mb-3">
                <section class="footer-section" aria-labelledby="footer-services-title">
                    <h5 id="footer-services-title" class="d-none d-md-block">Услуги</h5>
                    <button class="footer-toggle d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#footerServices" aria-expanded="false" aria-controls="footerServices">
                        Услуги
                    </button>
                    <div class="collapse d-md-block" id="footerServices">
                        <ul class="list-unstyled small">
                            <li><a href="{{ path('info-repair') }}">Ремонт отопителей</a></li>
                            <li><a href="{{ path('info-installation') }}">Установка автономок</a></li>
                            <li><a href="{{ path('service-journal') }}">Записаться</a></li>
                        </ul>
                    </div>
                </section>
            </div>

            {# Колонка: Контакты #}
            <div class="col-md-3 mb-4">
                <section class="footer-section" aria-labelledby="footer-contacts-title">
                    <h5 id="footer-contacts-title" class="d-none d-md-block">Контакты</h5>
                    <button class="footer-toggle d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#footerContacts" aria-expanded="false" aria-controls="footerContacts">
                        Контакты
                    </button>

                    {% set whatsapp = headerData.whatsapp|default('79059404240') %}
                    {% set phone = headerData.phone|default('+7 (905) 940-42-40') %}
                    {% set address = headerData.address|default('г. Омск, ул. 20 лет РККА 303 пом. 8П') %}

                    <div class="collapse d-md-block" id="footerContacts">
                        <p class="small mb-2 d-flex flex-wrap align-items-center gap-3">
                            <a href="https://wa.me/{{ whatsapp }}" target="_blank" rel="noopener" class="text-decoration-none text-dark" aria-label="WhatsApp">
                                <img src="{{ asset('assets/icons/WhatsApp.svg') }}" alt="WhatsApp" height="20">
                            </a>
                            <a href="https://t.me/{{ headerData.telegram_username|default('+' ~ whatsapp) }}" target="_blank" rel="noopener" class="text-decoration-none text-dark" aria-label="Telegram">
                                <img src="{{ asset('assets/icons/Telegram.svg') }}" alt="Telegram" height="20">
                            </a>
                            <a href="viber://chat?number={{ whatsapp }}" target="_blank" rel="noopener" class="text-decoration-none text-dark" aria-label="Viber">
                                <img src="{{ asset('assets/icons/Viber.svg') }}" alt="Viber" height="20">
                            </a>
                            <a href="tel:{{ phone|replace({' ': '', '(': '', ')': '', '-': ''}) }}" class="d-inline-flex align-items-center" aria-label="Позвонить по телефону {{ phone }}">
                                <img src="{{ asset('assets/icons/Phone.svg') }}" alt="Телефон" height="20" class="me-2">
                                <span>{{ phone }}</span>
                            </a>
                        </p>
                        <p class="small mb-0 d-flex align-items-start">
                            <a href="{{ headerData.dgis_link|default('https://go.2gis.com/sjmYu') }}" target="_blank" rel="noopener">
                                <img src="{{ asset('assets/icons/Location.svg') }}" alt="Адрес" height="20" class="me-2 mt-1">
                                <span>{{ address }}</span>
                            </a>
                        </p>
                    </div>
                </section>
            </div>

        </div>
    </div>
</footer>
